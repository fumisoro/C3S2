{
    "name": "Test1",
    "version": "0.1",
    "manifest_version": 2,
    
    "description": "拡張機能のテスト1",
    
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    
    "browser_action": {
        "default_icon": "icon48.png",
        "default_title": "Test1",
        "default_popup": "popup.html"
    },
    
    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts":[
    {
        "matches": ["<all_urls>"],
        "css": ["jquery-ui.min.css"],
        "js": ["jquery.js","jquery-ui.min.js","content.js"]
    }
    ]
}